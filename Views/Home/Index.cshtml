@{
    ViewData["Title"] = "Home Page";
}
<div class="main">


    <div class="home-container">



        <h1 class="home-titulo titulo">AstroGenerator</h1>

        <p class="home-paragrafo paragrafo ">Use AstroGenerator to explore and learn about different astronomical
            topics.
            Insert TAGs, base texts and references, click 'Generate' and instantly get questions and answers generated.
            Uncover the secrets of the universe in a practical and intuitive way.</p>

        <div class="home-inputBox" id="inputElemento">
            <input class="home-input input form-control" type="text" id="textoEntrada">
            <button type="button" class="home-botao botao btn btn-primary" onclick="enviarFormulario(), toggleElement('home-inputBox'), substituirBotaoMostrarPerguntas()">Generate</button>

        </div>

        <div class="home-botoes">

            <button class="btn btn-primary" id="botaoMostrarPerguntas"
                onclick="toggleElement('perguntasElemento'), toggleElement('home-status'), modificarTextoBotaoMostrarPerguntas()">Perguntas</button>
            <button id="botaoMostrarTags" class="btn btn-primary perguntasElemento d-none"
                onclick="toggleTags()">Tags</button>

        </div>


    </div>

    <div class="home-status" id="home-status">
        <div class="home-statusBox">
            <p class="home-paragrafo paragrafo" id="paragrafoStatus">Status This is where the status of
                the generated question will appear.</p>
        </div>
    </div>


    <div id="divPergunta">
        <!-- Aqui será adicionado dinamicamente o conteúdo da pergunta -->
    </div>

</div>



<div class="perguntas perguntasElemento d-none">



    <div id="pesquisa" class="d-none">
        <label for="pesquisaTags">Pesquisar Tags:</label>
        <button onclick="aumentarQuantidadeTAGs()">Ver Mais</button>
        <input type="text" id="pesquisaTags" oninput="pesquisarTags()">
        <button onclick="resetarQuantidadeTAGs(), consultarPerguntas()">Limpar</button>
    </div>

    <ul id="listaDeTags" class="d-none"></ul>
</div>

<div class="card-container perguntasContainer perguntasElemento d-none" id="cardContainer"></div>
